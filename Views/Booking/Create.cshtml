@model ProjectNet.Models.BookingModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">
<h1>Boka</h1>

<h4>Boka tid hos oss</h4>
<p>Du kan boka tid hos oss måndag - lördag mellan klockan 10:00-16:00. Vi stänger kl.18:00, önskar du boka en senare tid är du välkommen att ringa till oss.</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                     <label asp-for="Date" class="form-label">Datum</label>
                <input asp-for="Date" class="form-control" type="date" required />
                <div class="invalid-feedback">Vänligen ange ett giltigt datum.</div>
            </div>
        <div class="form-group">
            <label asp-for="Time" class="form-label">Tid (10:00 - 16:00)</label>
            <input asp-for="Time" class="form-control" type="time" min="10:00" max="16:00" required />
        <div class="invalid-feedback">Vänligen ange en giltig tid mellan 10:00 och 16:00.</div
        </div>

            <div class="form-group">
                <label asp-for="ServiceId" class="control-label"></label>
                <select asp-for="ServiceId" class ="form-control" asp-items="ViewBag.ServiceId"></select>
            </div>   
            <div class="form-group">
                <label asp-for="Telephonenumber" class="control-label"></label>
                <input asp-for="Telephonenumber" class="form-control" />
                <span asp-validation-for="Telephonenumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Boka" class="book-btn" />
            </div>
        </form>
    </div>
</div>

<div class="return">
    <a asp-action="Index">Tillbaka till bokning</a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
